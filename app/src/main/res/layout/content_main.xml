<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chipcalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    android:useDefaultMargins="true"
    android:id="@+id/gridlayout"
    android:background="#6fcd8e">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Длина чипа, mil"
        android:id="@+id/a_textView"
        android:gravity="left"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/a_editText"
        android:maxLength="6"
        android:background="#b3c47f"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ширина чипа, mil"
        android:id="@+id/b_textView"
        android:gravity="left"
        android:labelFor="@+id/b_editText"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/b_editText"
        android:maxLength="6"
        android:background="#ebdeb0"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/diametrStr"
        android:id="@+id/d_textView"
        android:singleLine="false"
        android:linksClickable="true"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/d_editText"
        android:background="#72cdce"
        android:inputType="number"
        android:layout_row="2"
        android:layout_column="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество чипов"
        android:id="@+id/button1"
        android:background="#233e83"
        android:textAlignment="center"
        android:textColor="#cecea9"
        android:textSize="@dimen/abc_text_size_title_material"
        android:clickable="true"
        android:layout_row="3"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mkm"
        android:id="@+id/ml_mm"
        android:layout_row="3"
        android:layout_column="1"
        android:checked="false"
        android:textAlignment="textStart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountTextView"
        android:layout_row="4"
        android:layout_column="0"
        android:textAlignment="center"
        android:singleLine="false"
        android:textColor="#1d3a6d"
        android:textSize="40dp"
        android:background="#d7ca53" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сброс"
        android:id="@+id/button2"
        android:textAlignment="viewStart"
        android:background="#bf3131"
        android:layout_column="1"
        android:layout_row="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Цена 1k чипов,$"
        android:id="@+id/cip_prise"
        android:layout_row="5"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/chip_prise"
        android:layout_row="5"
        android:layout_column="1"
        android:background="#4ac1ca"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Стоимость структуры, $"
        android:id="@+id/wafer_prise"
        android:layout_row="6"
        android:layout_column="0"
        android:textStyle="italic" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/wafer_ackount"
        android:layout_row="6"
        android:layout_column="1"
        android:background="#43c84e"
        android:textStyle="bold"
        android:textAlignment="textStart" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_row="7"
        android:layout_column="0"
        android:src="@drawable/cip_wafer_3" />

</GridLayout>
